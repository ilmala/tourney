{
    "name": "ilmala/tourney",
    "description": "A simple random tournament generator",
    "keywords": [],
    "homepage": "https://github.com/ilmala/tourney",
    "license": "MIT",
    "authors": [
        {
            "name": "Luca Malattia",
            "email": "luca.malattia@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/collections": "^9.36",
        "illuminate/support": "^9.36"
    },
    "require-dev": {
        "pestphp/pest": "^1.22"
    },
    "autoload": {
        "psr-4": {
            "Tourney\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
